<odoo>
    <data>
        <record id="view_college_student_subject_mark_list" model="ir.ui.view">
        <field name="name">college.student.subject.mark.list</field>
        <field name="model">college.student.subject.mark</field>
        <field name="arch" type="xml">
            <list editable='bottom'>
                <control>
                    <create string="Add a subject"/>
                    <create string="Add a section"
                            context="{'default_display_type':'line_section'}"/>
                    <create string="Add a note"
                            context="{'default_display_type':'line_note'}"/>
                </control>
                <field name="display_type" column_invisible="1"/>
                <field name='subject_id'/>
                <field name='credit' readonly='1' />
                <field name='internal_mark' />
                <field name='external_mark'/>
                <field name='total_mark' readonly='1'/>
                <field name='grade_point' readonly='1'/>
            </list>
        </field>
        </record>

        <record id="action_open_marks_wizard" model="ir.actions.act_window">
            <field name='name'>Add Marks</field>
            <field name='res_model'>college.student.subject.mark</field>
            <field name='view_mode'>list</field>
            <field name='target'>new</field>
        </record>
    </data>
</odoo>