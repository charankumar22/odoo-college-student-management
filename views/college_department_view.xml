<odoo>
    <data>
        <record id="view_college_department_form" model="ir.ui.view">
        <field name="name">college.department.form</field>
        <field name="model">college.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Department Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Subjects" name="subjects">
                            <field name="subject_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_college_department_list" model="ir.ui.view">
        <field name="name">college.department.list</field>
        <field name="model">college.department</field>
        <field name="arch" type="xml">
            <list string="Departments">
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="action_college_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">college.department</field>
        <field name="view_mode">list,form</field>
    </record>

    </data>
</odoo>