<odoo>
    <data>
        <record id="view_student_marks_wizard_form" model="ir.ui.view">
            <field name="name">student.marks.wizard.form</field>
            <field name="model">student.marks.wizard</field>
            <field name="arch" type="xml">
                <form string="Edit Subject Marks">
                    <sheet>
                        <group>
                            <field name="student_id" />
                        </group>
                        <notebook>
                            <page string="Subject Marks" name="marks">
                                <field name="mark_line_ids">
                                    <list editable="bottom">
                                        <field name="subject_mark_id" column_invisible="1" />
                                        <field name="subject_id" />
                                        <field name="credit" readonly="1" />
                                        <field name="internal_mark" />
                                        <field name="external_mark" />
                                        <field name="total_mark" readonly="1" />
                                        <field name="grade_point" readonly="1" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_save_marks" string="Save" type="object" class="oe_highlight" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
